#include "ros/ros.h"
#include "std_msgs/Int16.h"
#include "std_msgs/Bool.h"
#include <geometry_msgs/TwistStamped.h>
#include <iostream>

#include <stdio.h>
#include <signal.h>
#include <string.h>
#include <fcntl.h>
#include <errno.h>
#include <termios.h>
#include <unistd.h>
#include <math.h>

#include <SpiderRobot/MyArray.h>
bool SHUTDOWN = false;

int main(int argc, char **argv)
{
	ros::init(argc, argv, "SpiderRobotMain");
	ros::NodeHandle nh;
	ros::Publisher SpiderRobotMain_pub = nh.advertise<SpiderRobot::MyArray>("MyArray", 1000);
	std_msgs::String cds_pub;

	

}

void shutdownHandler(int s)
{
    ROS_INFO("SHUTDOWN COMMAND DETECTED...");
    SHUTDOWN = true;
}




